Import('msysenv')
Import('libmsys')
import os

env=msysenv.Clone()
env.Prepend(CPPPATH=['../src'], LIBS=['msys', 'msys-core'])

for mod in Glob('*.py'):
    env.AddPythonModule(mod.get_path(), prefix='msys')

for mod in Glob('validate/*.py'):
    env.AddPythonModule(mod.get_path(), prefix='validate/msys')

for script in Glob('scripts/dms-*') + Glob('scripts/dtr-*'):
    env.AddScript(script)

for prog in Glob('bin/*.cxx'):
    name = os.path.basename(prog.get_path())[:-4]
    env.AddProgram(name, prog)

env.AddShare('data/tip3p.dms')

